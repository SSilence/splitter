<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:padding="8dp">


    <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/primary"
            android:paddingTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Titel"
            android:gravity="center"
            android:layout_marginStart="32dp" app:layout_constraintTop_toBottomOf="@+id/image"
            android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_max="240dp"
            app:layout_constrainedHeight="true"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:contentDescription="cover"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/release"
            android:visibility="gone"
            android:padding="4dp"
            android:background="@color/grey"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center"
            android:textColor="@color/white" android:textStyle="bold" android:layout_marginTop="14dp"
            app:layout_constraintTop_toTopOf="parent" android:text="02.2020" android:layout_marginEnd="8dp"
            android:layout_marginStart="136dp" app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>